@model Person


<div class="row">
    <div class="col-6">

        <div class="card">

            <div class="card-header">
                <h5>Create a new Person</h5>
            </div>
            <div class="card-body">
                <form asp-controller="HelloWorld" asp-action="CreatePerson" method="post">

                    <div class="mb-3">
                        <label class="form-label">Person Name</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Person Number</label>
                        <input asp-for="CellPhoneNumber" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer"></div>

        </div>

        
    </div>
</div>