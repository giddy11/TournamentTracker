@model IEnumerable<Tournament>

<div class="container">

    <div class="p-3">
        <table class="table table-bordered table-striped table table-hover">
            <thead>
                <tr>
                    <th>
                        Tournament Name
                    </th>
                    <th>
                        Tournament Type
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td> <a href="#">@obj.TournamentName</a></td>
                        <td>@obj.TournamentType</td>
                        <td>@obj.Description</td>

                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Tournament" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Tournament" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>

        </table>
    </div>
    
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}